<?xml version="1.0" encoding="utf-8" ?>
<project name="Packager" default="go">
  <!-- Project UppercuT - http://uppercut.googlecode.com -->
  <!-- DO NOT EDIT THIS FILE - Add custom tasks in BuildTasks.Custom folder with file by the same name - find out more at http://uppercut.pbwiki.com -->
  <property name="build.config.settings" value="__NONE__" overwrite="false" />
  <include buildfile="${build.config.settings}" if="${file::exists(build.config.settings)}" />
  <property name="dirs.current" value="${directory::get-parent-directory(project::get-buildfile-path())}" />
  <property name="project.name" value="__SOLUTION_NAME_WITHOUT_SLN_EXTENSION__" overwrite="false" />
  <property name="folder.deployment" value="deployment" overwrite="false" />
  <property name="folder.code_build" value="build_output" overwrite="false" />
  <property name="folder.code_drop" value="code_drop" overwrite="false" />
  <property name="dirs.build" value="${dirs.current}\..\${folder.code_build}" />
  <property name="dirs.drop" value="${dirs.current}\..\${folder.code_drop}" overwrite="false" />
  <property name="folder.app.drop" value="${project.name}" overwrite="false" />
  <property name="dirs.lib" value="${dirs.current}\..\lib" overwrite="false" />  
  <property name="lib.ilmerge.folder" value="${dirs.lib}\ILMerge" />
  <property name="dirs.deployment" value="${dirs.drop}\${folder.deployment}" />
  <property name="dirs.merge" value="${dirs.drop}\merge" />
  <property name="dirs.merge.log" value="${dirs.drop}\build_artifacts\ilmerge" />
  <property name="log.merge" value="ilmerge.log" />
  <property name="path.file.test_databases" value="${dirs.current}\..\product\testdatabase" />

  <target name="go" depends="copy_nant_to_deploy, cleanup_roundhouse_drop, copy_roundhouse_files_to_deploy, restructure_roundhouse_drop_folder, copy_test_databases_to_deploy" description="Packaging" />

  <target name="copy_nant_to_deploy">
    <echo message="Copying NAnt folder items to ${dirs.deployment}\NAnt."/>
    <copy todir="${dirs.deployment}">
      <fileset basedir="${dirs.lib}">
        <include name="NAnt/**" />
      </fileset>
    </copy>
  </target>

  <target name="cleanup_roundhouse_drop">
    <echo message="Cleaning up ${dirs.drop}\${folder.app.drop} to remove unused items." />
    <delete> 
      <fileset basedir="${dirs.drop}\${folder.app.drop}">
        <include name="_BuildInfo.xml" />
        <include name="developwithpassion.commons.core.infrastructure*" />
        <include name="NAnt*.xml" />
        <include name="*.pdb" />
      </fileset>
    </delete>
  </target>
  
  <target name="copy_roundhouse_files_to_deploy">
    <echo message="Copying roundhouse assemblies to ${dirs.deployment}\NAnt."/>
    <copy todir="${dirs.deployment}\NAnt">
      <fileset basedir="${dirs.drop}\RoundhousE">
        <exclude name="Microsoft.Build.Framework.dll" />
        <include name="*.dll" />
        <include name="samples.xml" />
      </fileset>
    </copy>
  </target>
  
  <target name="restructure_roundhouse_drop_folder">
    <echo message="Moving NAnt specific items to ${dirs.drop}\${folder.app.drop}\NAnt." />
    <copy todir="${dirs.drop}\${folder.app.drop}\NAnt">
      <fileset basedir="${dirs.drop}\${folder.app.drop}">
        <exclude name="roundhouse.exe" />
        <exclude name="roundhouse.exe.config" />
        <exclude name="DBDeploy_MSBuild.proj" />
        <exclude name="Microsoft.Build.Framework.dll" />
        <include name="*.*" />
      </fileset>
    </copy>
    
    <echo message="Moving MSBuild specific items to ${dirs.drop}\${folder.app.drop}\MSBuild." />
    <copy todir="${dirs.drop}\${folder.app.drop}\MSBuild">
      <fileset basedir="${dirs.drop}\${folder.app.drop}">
        <exclude name="roundhouse.exe" />
        <exclude name="roundhouse.exe.config" />
        <exclude name="dbdeploy_nant.deploy" />
        <include name="*.*" />
      </fileset>
    </copy>
    
    <echo message="Moving Console specific items to ${dirs.drop}\${folder.app.drop}\ConsoleApp." />
    <copy todir="${dirs.drop}\${folder.app.drop}\ConsoleApp">
      <fileset basedir="${dirs.drop}\${folder.app.drop}">
        <exclude name="DBDeploy_MSBuild.proj" />
        <exclude name="Microsoft.Build.Framework.dll" />
        <exclude name="dbdeploy_nant.deploy" />
        <exclude name="samples.xml" />
        <exclude name="roundhouse.tasks.dll" />
        <exclude name="NAnt.Core.dll" />
        <include name="*.*" />
      </fileset>
    </copy>
    
    <delete>
      <fileset basedir="${dirs.drop}\${folder.app.drop}">
        <include name="*.*" />
      </fileset>
    </delete>
  </target>
  
  <target name="copy_test_databases_to_deploy">
    <echo message="Copying roundhouse test databases from ${path.file.test_databases} to ${dirs.deployment}."/>
     <copy todir="${dirs.deployment}">
      <fileset basedir="${path.file.test_databases}">
        <include name="**/*.*" />
      </fileset>
    </copy>
  </target>
  
  <target name="include_files" >
    
  </target>

  <target name="merge_the_libs">
    <echo message="Merging everything to one dll - roundhouse.dll."/>
    <loadtasks assembly="${lib.ilmerge.folder}\ILMerge.NAnt.Tasks.dll" />
    <ilmerge outputfile="${dirs.merge}\roundhouse.merged.dll">
      <assemblies>
        <include name="${dirs.build}\roundhouse.dll" />
        <include name="${dirs.build}\roundhouse.tasks.dll" />
      </assemblies>
    </ilmerge>
  </target>
  
  <target name="merge">
    <echo message="Merging everything to one dll - roundhouse.dll."/>
    <mkdir dir="${dirs.merge}"/>
    <mkdir dir="${dirs.merge.log}"/>
    
    
    
    <exec program="${lib.ilmerge.folder}\ILMerge.exe"
			  workingdir="${dirs.build}">
			<arg path="${dirs.build}\roundhouse.dll" />
			<arg path="${dirs.build}\roundhouse.tasks.dll" />
			<arg path="${dirs.build}\Microsoft.SqlServer*.dll" />
			<!--<arg path="${basedir.build}/Castle*.dll" />-->
			<arg value='/out:"${dirs.merge}\roundhouse.dll"' />
			<arg line='/attr:"${dirs.build}\roundhouse.dll"' />
			<arg value="/t:library" />
			<arg value="/wildcards" />
			<arg value="/log:${dirs.merge.log}\${log.merge}" />
			<!--<arg value="/internalize:../ilmerge.internalize" />-->
			<arg value="/ndebug" />
				 <!--unless="${build.msbuild.configuration == 'Debug'}" />-->
		</exec>
  </target>

</project>