<?xml version="1.0" encoding="utf-8"?>
<project name="CUSTOM POST Compile" default="go">
	<property name="debug" value="false" />
	<property name="project_lib" value="" />
	<property name="project_test_lib" value="" />
	<property name="target_type" value="library" />

  <target name="go" />
  
  <target name="compile_product">
    <csc output="${project_lib}" target="${target_type}" debug="${debug}">
      <sources>
          <include name="..\product\**\*.cs"/>
          <exclude name="..\product\**\*Specs.cs"/>
          <exclude name="..\product\**\*Spec.cs"/>
          <exclude name="..\product\**\*Test*.cs"/>
          <exclude name="..\product\**\bdd\*.*"/>
          <exclude name="..\product\**\bdd*\*.*"/>
      </sources>
      <references>
          <include name="..\lib\references\**\*.dll"/>
      </references>
    </csc>

  </target>
  
  <target name="compile_test_library"> 
    <csc output="${project_test_lib}" target="library" debug="${debug}">
      <sources>
          <include name="..\product\**\*Specs.cs"/>
          <exclude name="..\product\**\*Spec.cs"/>
          <include name="..\product\**\*Test*.cs"/>
          <include name="..\product\**\bdd\*.*"/>
          <include name="..\product\**\bdd*\*.*"/>
      </sources>
      <references>
          <include name="..\thirdparty\tools\**\*.dll"/>
          <include name="..\thirdparty\lib\**\*.dll"/>
          <include name="${project_lib}"/>
      </references>
    </csc>
  </target>
  
</project>
